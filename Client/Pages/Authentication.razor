@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.Extensions.Configuration

@inject NavigationManager Navigation
@inject IConfiguration Configuration

<RemoteAuthenticatorView Action="@Action">
    @*authentication/login*@
    <LoggingIn>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging in, please wait...</MudText>
        </MudPaper>
    </LoggingIn>
    @*authentication/login-callback*@
    <CompletingLoggingIn>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging in, almost done...</MudText>
        </MudPaper>
    </CompletingLoggingIn>
    @*authentication/login-failed*@
    <LogInFailed>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging in failed!</MudText>
        </MudPaper>
    </LogInFailed>
    @*authentication/logout*@
    <LogOut>
        @{
            IConfigurationSection authSection = Configuration.GetSection("Auth0");
            string authority = authSection.GetValue<string>("Authority") ?? throw new NullReferenceException("No Autho0 Authority has been configured");
            string clientId = authSection.GetValue<string>("ClientId") ?? throw new NullReferenceException("No Autho0 ClientId has been configured");

            Navigation.NavigateTo($"{authority}v2/logout?client_id={clientId}");
        }
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging out, please wait...</MudText>
        </MudPaper>
    </LogOut>
    @*authentication/logout-callback*@
    <CompletingLogOut>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging out, almost done...</MudText>
        </MudPaper>
    </CompletingLogOut>
    @*authentication/logout-failed*@
    <LogOutFailed>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logging out failed!</MudText>
        </MudPaper>
    </LogOutFailed>
    @*authentication/logged-out*@
    <LogOutSucceeded>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Logged out successfully!</MudText>
        </MudPaper>
    </LogOutSucceeded>
    @*authentication/profile*@
    <UserProfile>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">User Profile information is currently hidden</MudText>
        </MudPaper>
    </UserProfile>
    @*authentication/register*@
    <Registering>
        <MudPaper Elevation="0" Height="500px">
            <MudText role="alert" Typo="Typo.h5">Registering, please wait...</MudText>
        </MudPaper>
    </Registering>
</RemoteAuthenticatorView>

@code {
    [Parameter] public string Action { get; set; } = null!;
}
