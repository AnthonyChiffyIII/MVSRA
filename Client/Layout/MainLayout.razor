@using MVSRA.Client.Layout
@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider Theme="@MVSRATheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <Header @bind-DrawerOpen="@_drawerOpen" />
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudPaper Width="100%" Height="100%" MinHeight="500px">
            <MudContainer MaxWidth="MaxWidth.Medium">
                @Body
            </MudContainer>
        </MudPaper>
        <Footer />
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    MudTheme MVSRATheme = new()
        {
            Palette = new()
            {
                AppbarBackground = "#000000",
                AppbarText = "#FFCC33",
                DrawerBackground = "#000000",
                Primary = "#FFFBFC",
                Secondary = "#FFCC33",
                Background = "000000"
            },
            PaletteDark = new()
            {
                AppbarBackground = "#000000",
                AppbarText = "#FFCC33",
                DrawerBackground = "#000000",
                Primary = "#FFFBFC",
                Secondary = "#FFCC33",
                Background = "000000"
            }
        };
}